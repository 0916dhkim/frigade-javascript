{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2016",
    "lib": [
      "ESNext"
    ],
    "allowJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "isolatedModules": true,
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": [
    "**/__tests__/*",
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "jest.setup.js",
    ".eslintrc.js"
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
